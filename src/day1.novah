module day1

import util as U

data : List Int
data = U.readProcessTestData 1 "\\n" String.toInt

checkWindow : List Int -> Int
checkWindow list =
  let check i = list.[i + 1] > list.[i]
  0 .. (List.lastIndex list) |> List.count check

pub
part1 : Unit -> Int
part1 _ = checkWindow data

pub
part2 : Unit -> Int
part2 _ =
  let newdata = List.partitionStep 3 1 data |> List.map List.sum
  checkWindow newdata