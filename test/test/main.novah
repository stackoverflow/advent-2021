  test "Day 2" \_ ->
    D2.day2part1 () `shouldBe` 1250395
    D2.day2part2 () `shouldBe` 1451210346
  
  test "Day 3" \_ ->
    D3.day3part1 () `shouldBe` 1997414
    D3.day3part2 () `shouldBe` 1032597
  
  test "Day 4" \_ ->
    D4.day4part1 () `shouldBe` 11536
